{% extends "FormArmorBundle::client_layout.html.twig" %}
{% block FormArmor_body %}
	<h2>AFFICHAGE DES SESSIONS DE FORMATION</h2>
	<table class="table">
		<thead>
		<tr>
			<th>Formation</th>
			<th>Niveau</th>
			<th>Description</th>
			<th>Date debut</th>
			<th>Nombre de places</th>
			<th>Nombre d'inscrits</th>
			<th>Fermé</th>
			<th colspan="2">Option</th>
		</tr>
		</thead>
		<tbody>
			{% for session in lesSessions %}
				<tr {# si le nombre de passages dans la boucle est pair #} {% if loop.index is even %} class="success" {% else %} class="info" {% endif %}>
					<td>{{session.libelle}}</td>
					<td>{{session.niveau}}</td>
					<td>{{session.description}}</td>
					<td>{{session.date|date('d-m-Y')}}</td>
					<td>{{session.nbPlaces}}</td>
					<td>{{session.nbInscrits}}</td>
					{% if (session.ferme == 1) %}
						<td>Oui</td>
					{% else %}
						<td>Non</td>
					{% endif %}
					<td><a href="{{ path('form_armor_client_session_inscription', {'id': session.session.id}) }}" class="btn btn-primary" role="button">S'Inscrire</a></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	
	<ul class="pagination">
		{# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
		{% for p in range(1, nbPages) %}
			<li{% if p == page %} class="active"{% endif %}>
				<a href="{{ path('form_armor_client_session', {'page': p}) }}">{{ p }}</a>
			</li>
		{% endfor %}
	</ul>
	
	<script>
		$(function() {
			$('#menu1').attr('class', 'active');
		});
	</script>
	
{% endblock %}